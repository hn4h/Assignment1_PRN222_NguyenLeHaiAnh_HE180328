@model IEnumerable<NguyenLeHaiAnh_HE180328_Assignment1.DataAccess.Models.NewsArticle>
@{
    ViewData["Title"] = "News Management";
    var isStaff = Context.Session.GetInt32("Role") == 1;
}

<h2>News Articles</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (ViewBag.TagId != null && ViewBag.TagName != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <i class="bi bi-filter"></i> Filtering by tag: <strong>@ViewBag.TagName</strong>
        <a asp-action="Index" asp-route-search="@ViewBag.Search" class="btn btn-sm btn-outline-secondary ms-2">
            <i class="bi bi-x-circle"></i> Clear Filter
        </a>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control" placeholder="Search by title..."
                   value="@ViewBag.Search" />
        </div>
        <div class="col-md-4">
            <select name="tagId" class="form-select">
                <option value="">-- Filter by Tag --</option>
                @if (ViewBag.AllTags != null)
                {
                    foreach (var tag in (IEnumerable<NguyenLeHaiAnh_HE180328_Assignment1.DataAccess.Models.Tag>)ViewBag.AllTags)
                    {
                        <option value="@tag.TagId" selected="@(ViewBag.TagId == tag.TagId ? "selected" : null)">
                            @tag.TagName
                        </option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-search"></i> Filter
            </button>
        </div>
    </div>
</form>

@if (isStaff)
{
    <button class="btn btn-success mb-3"
            id="btnCreate"
            data-url="@Url.Action("CreatePopup", "NewsArticle")">
        <i class="bi bi-plus-circle"></i> Create New Article
    </button>
}

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Created</th>
            <th>Status</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Author</th>
            @if (isStaff)
            {
                <th style="width:100px;">Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="@(isStaff ? 7 : 6)" class="text-center text-muted">
                    <i class="bi bi-inbox"></i> No articles found matching your criteria.
                </td>
            </tr>
        }
        else
        {
            @foreach (var n in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@n.NewsArticleId" class="text-decoration-none">
                            @n.NewsTitle
                        </a>
                    </td>
                    <td>@n.CreatedDate?.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (n.NewsStatus == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </td>
                    <td>@n.Category?.CategoryName</td>
                    <td>
                        @foreach (var tag in n.Tags)
                        {
                            <a asp-action="Index" 
                               asp-route-tagId="@tag.TagId" 
                               asp-route-search="@ViewBag.Search"
                               class="badge bg-secondary text-decoration-none me-1"
                               title="Filter by this tag">
                                @tag.TagName
                            </a>
                        }
                    </td>
                    <td>@n.CreatedBy?.AccountName</td>
                    @if (isStaff)
                    {
                        <td>
                            <button class="btn btn-sm btn-warning btn-edit"
                                    data-url="@Url.Action("EditPopup", "NewsArticle", new { id = n.NewsArticleId })">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { search = ViewBag.Search, tagId = ViewBag.TagId, page = ViewBag.CurrentPage - 1 })"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { search = ViewBag.Search, tagId = ViewBag.TagId, page = i })">@i</a>
                </li>
            }
            <li class="page-item @(ViewBag.CurrentPage >= ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" 
                   href="@Url.Action("Index", new { search = ViewBag.Search, tagId = ViewBag.TagId, page = ViewBag.CurrentPage + 1 })"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
}

<!-- Modal for popup form -->
<div class="modal fade" id="crudModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const modal = new bootstrap.Modal('#crudModal');

            $('#btnCreate').on('click', function () {
                loadForm($(this).data('url'));
            });

            $('.btn-edit').on('click', function () {
                loadForm($(this).data('url'));
            });

            function loadForm(url) {
                $.get(url, function (html) {
                    $('#crudModal .modal-content').html(html);
                    bindAjaxForm();
                    modal.show();
                });
            }

            function bindAjaxForm() {
                $('form[data-ajax="true"]').on('submit', function (e) {
                    e.preventDefault();
                    const f = $(this);
                    $.post(f.attr('action'), f.serialize(), function (res) {
                        if (res.success) {
                            location.reload();
                        } else {
                            $('#crudModal .modal-content').html(res);
                            bindAjaxForm();
                        }
                    });
                });
            }
        });
    </script>
}
