@model NguyenLeHaiAnh_HE180328_Assignment1.DataAccess.Models.Category
@{
    ViewData["Title"] = "Delete Category";
}

<h4>Delete Category</h4>
<p>Are you sure you want to delete “<strong>@Model.CategoryName</strong>”?</p>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.CategoryId" />
    <button name="sure" value="true" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

