@model IEnumerable<NguyenLeHaiAnh_HE180328_Assignment1.DataAccess.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h2>Category Management</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="get" class="mb-3 d-flex">
    <input type="text" name="search" class="form-control me-2" placeholder="Search..."
           value="@ViewBag.Search" />

    <select name="active" class="form-select me-2" style="max-width:150px;">
        <option value="">All</option>
        <option value="true" selected="@(ViewBag.Status?.ToString() == "True" ? "selected" : null)">Active</option>
        <option value="false" selected="@(ViewBag.Status?.ToString() == "False" ? "selected" : null)">Inactive</option>
    </select>

    <button class="btn btn-primary">Filter</button>
</form>

<button id="btnCreate" class="btn btn-success mb-3"
        data-url="@Url.Action("CreatePopup", "Category")">
    + New Category
</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Parent</th>
            <th>Status</th>
            <th style="width:140px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CategoryName</td>
                <td>@c.CategoryDesciption</td>
                <td>@(c.ParentCategory?.CategoryName ?? "-")</td>
                <td>@((c.IsActive ?? false) ? "Active" : "Inactive")</td>
                <td>
                    <button class="btn btn-sm btn-warning btn-edit"
                            data-url="@Url.Action("EditPopup", "Category", new { id = c.CategoryId })">
                        Edit
                    </button>
                    <form asp-action="Delete" asp-route-id="@c.CategoryId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link"
                   href="@Url.Action("Index", new { search = ViewBag.Search, active = ViewBag.Status, page = i })">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>

<!-- Modal for popup form -->
<div class="modal fade" id="crudModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const modal = new bootstrap.Modal('#crudModal');

            $('#btnCreate').on('click', function () {
                loadForm($(this).data('url'));
            });

            $('.btn-edit').on('click', function () {
                loadForm($(this).data('url'));
            });

            function loadForm(url) {
                $.get(url, function (html) {
                    $('#crudModal .modal-content').html(html);
                    bindAjaxForm();
                    modal.show();
                });
            }

            function bindAjaxForm() {
                $('form[data-ajax="true"]').on('submit', function (e) {
                    e.preventDefault();
                    const f = $(this);
                    $.post(f.attr('action'), f.serialize(), function (res) {
                        if (res.success) {
                            location.reload();
                        } else {
                            $('#crudModal .modal-content').html(res);
                            bindAjaxForm();
                        }
                    });
                });
            }
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
